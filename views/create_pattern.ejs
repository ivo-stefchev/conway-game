<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.2.2/jquery.min.js"></script>
    <script src="https://cdn.socket.io/socket.io-1.4.5.js"></script>
    <link rel='stylesheet' type='text/css' href='/stylesheets/style.css'>

    <script type="text/javascript">
        var game_id = '<%= game_id %>';
        var rows = <%= rows %>;
        var cols = <%= cols %>;
        var cell = <%= cell %>;
        var timeout = <%= timeout %>;
        var start_game = <%= start_game %>;
    </script>

  </head>
  <body>
    <h1><%= title %></h1>
    <% if (start_game) { %>
        <div>New pattern created</div>
    <% } else { %>
        <div>Viewing live game</div>
    <% } %>
    <div>Name:&nbsp;&nbsp;&nbsp;<span id="pattern_name"></span></div>
    <div>Generation:&nbsp;<span id="pattern_generation"></span></div>
    <div>
        <canvas id="canvas" width="0" height="0"></canvas>
    </div>

    <script type='text/javascript' src='/javascripts/script_create_pattern.js'></script>
  </body>
</html>
